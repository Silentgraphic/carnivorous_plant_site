extends layout

block stylesheets 
    link(rel='stylesheet' href='/stylesheets/plant_info.css')

block content
    div(class="container-fluid d-flex justify-content-center" id="image_of_plant")
        img(class="img-fluid" src=plant_image[0] alt=plant_name)
    article(class="container h-100")
        div(class="class=row h-100 justify-content-center align-items-center")
            div(class="article_container col")
                h1 !{plant_name}
                each text, index in plant_text
                    div(class="col")
                        p !{text} 
                    if index + 1 < plant_image.length
                        div(class="col image-container")
                            if index % 2 == 0
                                img(class="img-fluid plant_images" src=plant_image[index + 1] alt=index + 1 align="right")
                            else
                                img(class="img-fluid plant_images" src=plant_image[index + 1] alt=index + 1 align="left")
    script.
        function myFunction(x) {
            if (x.matches) { // If media query matches
                var images = document.getElementsByClassName("plant_images");
                for( i = 0; i <images.length; i++){
                    images[i].setAttribute("align", "middle")
                }
            }
        }

        var x = window.matchMedia("(max-width:576px)")
        myFunction(x) // Call listener function at run time
        x.addListener(myFunction) // Attach listener function on state changes